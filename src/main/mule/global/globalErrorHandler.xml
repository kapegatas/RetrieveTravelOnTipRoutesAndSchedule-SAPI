						<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
	"message": "HTTP:INTERNAL_SERVER_ERROR"
}]]></ee:set-payload>
					</ee:message>
				</ee:transform>
			</on-error-propagate>
		<on-error-propagate enableNotifications="true" logException="true" doc:name="On Error Propagate" doc:id="0821a9f7-1683-4c29-9f10-ecf0883d46a5" type="ANY">
			<ee:transform doc:name="Transform Message" doc:id="efd7fd62-8cf3-4fb5-bcb3-c5af3e720521" >
				<ee:message >
					<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
	"message": "Critical Error"
}]]></ee:set-payload>
				</ee:message>
			</ee:transform>
		</on-error-propagate>
	</error-handler>
	
	</mule>
